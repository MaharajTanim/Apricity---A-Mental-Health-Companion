# Server Configuration
HOST=0.0.0.0
PORT=8000
ENV=development

# Model Configuration
# Primary model path (supports both local and HuggingFace)
MODEL_PATH=microsoft/deberta-v3-base
# Alternative for fine-tuned model: MODEL_PATH=./models/apricity-emotion-deberta/best

# Legacy support (will use MODEL_PATH if set)
EMOTION_MODEL_PATH=microsoft/deberta-v3-base
GENERATION_MODEL_NAME=google/flan-t5-base
DEVICE=cuda

# Model Inference Parameters
MAX_NEW_TOKENS=160
NUM_BEAMS=4
TEMPERATURE=0.7
TOP_P=0.92
MAX_LENGTH=192

# Safety Configuration
ENABLE_SAFETY_FILTER=true
CRISIS_DETECTION_THRESHOLD=0.8

# Performance
BATCH_SIZE=16
MAX_WORKERS=4
CACHE_SIZE=1000

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ml-service.log
